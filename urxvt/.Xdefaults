URxvt.buffered:         true
URxvt.background:       black
URxvt.foreground:       white
URxvt.cursorColor:      green
URxvt.perl-ext-common:  default,matcher
URxvt.url-launcher:     /usr/bin/firefox
URxvt.matcher.button:   1
URxvt.scrollBar:        false
URxvt.transparent:      true
URxvt.shading:          20


! urxvt defaults:
! color0       (black)            = Black
! color1       (red)              = Red3
! color2       (green)            = Green3
! color3       (yellow)           = Yellow3
! color4       (blue)             = Blue3
! color5       (magenta)          = Magenta3
! color6       (cyan)             = Cyan3
! color7       (white)            = AntiqueWhite
! color8       (bright black)     = Grey25
! color9       (bright red)       = Red
! color10      (bright green)     = Green
! color11      (bright yellow)    = Yellow
! color12      (bright blue)      = Blue
! color13      (bright magenta)   = Magenta
! color14      (bright cyan)      = Cyan
! color15      (bright white)     = White

! Alternatives
! Blue: lighter (looks closer to cyan, but it is an option if deepsky is too
! dark to read (it might be a good idea to make symlinks green))
!URxvt.color4:          SteelBlue2
!URxvt.color12:         SteelBlue1
!URxvt.color6:          cyan1
URxvt.font:-*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*
URxvt.urgentOnBell: true
! :Bind C-0, C-+ and C-= to activate small, medium, and big font size resp.     
URxvt.keysym.C-0: command:\033]710;-*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*\007
URxvt.keysym.C-minus: command:\033]710;-*-terminus-medium-*-*-*-16-*-*-*-*-*-*-*\007
URxvt.keysym.C-equal: command:\033]710;-*-terminus-medium-*-*-*-20-*-*-*-*-*-*-*\007
URxvt.keysym.Shift-Up: command:\003]720;0\007
URxvt.keysym.Shift-Down: command:\003]721;1\007
